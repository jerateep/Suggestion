@{
    ViewData["Title"] = "main";
}
<h1>@ViewData["Title"]</h1>

<p></p>
<div class="pull-left">
    Search: <input type="text"/>
</div>
<div class="pull-right">
    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalNewSGO">
        <i class="glyphicon glyphicon-file"></i>
        <span class="font-16">New Suggestion</span>
    </button>
</div>

<div>
    <table id="tblSGO" class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th bgcolor="grey"><font color="white">#</font></th>
                <th bgcolor="grey"><font color="white">เรื่อง</font></th>
                <th bgcolor="grey"><font color="white">วันที่สร้างเอกสาร</font></th>
                <th bgcolor="grey"><font color="white">ผู้สร้างเอกสาร</font></th>
                <th bgcolor="grey"><font color="white">สถานะเอกสาร</font></th>
                <th bgcolor="grey"><font color="white">Action</font></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>คอมช้า</td>
                <td>10/01/2020</td>
                <td>คุณเทส เทส</td>
                <td>ฉบับร่าง</td>
                <td>
                    @Html.ActionLink(
                        "แก้ไข",
                        "DownloadFile",
                        "Home",
                    new { @class = "btn btn-info" }) |
                    @Html.ActionLink(
                          "ยกเลิก",
                          "DownloadFile",
                          "Home",
                      new { @class = "btn btn-info" })
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>คอมช้า2</td>
                <td>10/01/2020</td>
                <td>คุณเทส เทส</td>
                <td>รอตรวจสอบ</td>
                <td>
                    @Html.ActionLink(
                    "แก้ไข",
                    "DownloadFile",
                    "Home",
                new { @class = "btn btn-info" }) |
                    @Html.ActionLink(
                          "ยกเลิก",
                          "DownloadFile",
                          "Home",
                      new { @class = "btn btn-info" })
                </td>
            </tr>
        </tbody>
    </table>
</div>


<!--Popup-->
<div class="modal fade" id="modalNewSGO" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create New Suggestion</h4>
            </div>
            <!--Details-->
            <div class="modal-body">
                EMP ID : <input type="text" name="name" value="" id="txtempid"/>
            </div>
            <!--Button-->
            <div class="modal-footer">
                <div class="pull-right">

                    <button type="button" class="btn btn-success btn-sm" onclick="Goto()">
                        <i class="glyphicon glyphicon-file"></i>
                        <span class="font-16">New Suggestion</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function Goto() {
        window.location.href = '/Home/CreateSGO?empid='+ document.getElementById("txtempid").value;
    }
</script>